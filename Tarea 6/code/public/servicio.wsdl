  </binding>
  <service name="OperacionesService">
    <port name="OperacionesPort" binding="tns:OperacionesBinding">
      <soap:address location="http://172.16.80.128/code/public/servicio.php"/>
    </port>
  </service>
  <message name="getPVPIn">
    <part name="codigoProducto" type="xsd:string"/>
  </message>
  <message name="getPVPOut">
    <part name="return" type="xsd:float"/>
  </message>
  <message name="getStockIn">
    <part name="codigoProducto" type="xsd:string"/>
    <part name="codigoTienda" type="xsd:string"/>
  </message>
  <message name="getStockOut">
    <part name="return" type="xsd:int"/>
  </message>
