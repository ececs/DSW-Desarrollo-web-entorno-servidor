      <soap:operation soapAction="http://172.16.80.128/code/public/servicio.php#getStock"/>
      <input>
        <soap:body use="encoded" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" namespace="http://172.16.80.128/code/public/servicio.php"/>
      </input>
      <output>
        <soap:body use="encoded" encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" namespace="http://172.16.80.128/code/public/servicio.php"/>
